{
  "name": "saleor-gh-pages",
  "version": "1.0.0",
  "description": "Saleor site",
  "main": "index.html",
  "scripts": {
    "build": "npm run jade && npm run scss && npm run uglify",
    "jade": "node_modules/jade/bin/jade.js src/*.jade -o ./",
    "reload": "node_modules/browser-sync/bin/browser-sync.js reload --port 3004",
    "scss": "node_modules/node-sass/bin/node-sass src/style.scss static/style.css --source-map static/style.css.map",
    "sync": "node_modules/browser-sync/bin/browser-sync.js start --server --port 3004 watch --files *.html static/*.css static/*.js --reload-delay 1000",
    "uglify": "node_modules/uglify-js/bin/uglifyjs node_modules/jquery/dist/jquery.js node_modules/bootstrap-sass/assets/javascripts/bootstrap.js bower_components/typed.js/js/typed.js src/site.js --output static/site.js --compress --mangle --source-map site.js.map",
    "watch": "node_modules/watch/cli.js 'npm run jade && npm run scss && npm run uglify' src"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/mirumee/saleor.git"
  },
  "author": "Mirumee Software",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mirumee/saleor/issues"
  },
  "devDependencies": {
    "jade": "~1.9.2",
    "watch": "~0.16.0",
    "browser-sync": "~2.7.1",
    "node-sass": "~3.1.0",
    "bootstrap-sass": "~3.3.4",
    "font-awesome": "~4.3.0",
    "sass-flex-mixin": "~1.0.0",
    "jquery": "~2.1.4",
    "uglify-js": "~2.4.22"
  }
}
