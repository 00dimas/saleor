doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        - var pageTitle = "Saleor \u2014 an opensource storefront written in Python"
        block title
            title
                = pageTitle
        meta(name="viewport", content="width=device-width,initial-scale=1")
        meta(name="theme-color", content="#F5EFDF")
        link(href="static/style.css", rel="stylesheet")
    block bodyClass
    body(class=bodyClass, id="top")
        header.header
            nav.navbar.navbar-default
                div.container
                    div.navbar-header
                        a.logo(href="./")
                            img.logo-img(src="static/images/logo.svg", alt="")
                    div#navbar.navbar-collapse
                        ul.nav.navbar-right
                            li
                                a(class=["btn-menu"], href="#try-it-now") Get Saleor
        main
            block main
        footer.footer
            div.footer-in
                ul.footer-menu.hidden-xs
                    li
                        a.footer-brand(href="#top")
                            img.img-responsive(src="static/images/logo.svg", alt="")
                p.copyrights &copy; 2015
                    a(href="https://mirumee.com")  Mirumee Software
                ul.social-links
                    li.social-links-item
                        a.social-links-link(href="https://twitter.com/getsaleor")
                            i.social-links-twitter
        script(src="static/site.js")
